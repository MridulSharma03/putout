{
    "printer": "putout",
    "match": {
        "**/codemods": {
            "putout": "on"
        },
        "**/{packages}/{test,engine-processor,eslint-config,plugin-*,formatter-*,processor-*}": {
            "putout": "on",
            "nodejs": "off",
            "putout/create-test": ["on", {
                "add": [
                    ["printer", "putout"]
                ]
            }]
        },
        "**/rules": {
            "putout": "on",
            "putout/create-test": ["on", {
                "add": [
                    ["printer", "putout"]
                ]
            }]
        },
        "**/packages/plugin-*/*.md{json}": {
            "putout-config": "on"
        },
        "README.md": {
            "convert-to-arrow-function": "off",
            "promises/convert-reject-to-throw": "off",
            "promises/add-missing-await": "off",
            "promises/remove-useless-async": "off"
        }
    },
    "rules": {
        "remove-useless-spread/object": ["on", {
            "exclude": "module.exports.rules = __"
        }]
    },
    "ignore": [
        "docs",
        ".husky"
    ]
}
